<h1>Code Challenge!</h1>

<h2>Code!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Rest!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Challenge</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">Code?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Code!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add</button>
</form>
